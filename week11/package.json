{
  "name": "demo",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "dev": "npm run dev:controller",
    "dev:sensor": "npm run build:sensor && npm run upload:sensor && concurrently \"npm run monitor\"",
    "dev:controller": "npm run build:controller && npm run upload:controller && concurrently \"npm run monitor\"",
    "build:controller": "arduino-cli compile -b esp32:esp32:XIAO_ESP32S3 ./controller",
    "build:sensor": "arduino-cli compile -b esp32:esp32:XIAO_ESP32S3 ./read-sensor",
    "upload:controller": "arduino-cli upload -p /dev/ttyACM0 -b esp32:esp32:XIAO_ESP32S3 ./controller",
    "upload:sensor": "arduino-cli upload -p /dev/ttyACM0 -b esp32:esp32:XIAO_ESP32S3 ./read-sensor",
    "monitor": "arduino-cli monitor -p /dev/ttyACM0 -c baudrate=115200",
    "serve": "node server/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "openai": "^6.7.0",
    "ws": "^8.18.3"
  }
}