{
  "name": "demo",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "dev": "npm run dev:operator",
    "dev:operator": "npm run build:operator && npm run upload:operator && concurrently \"npm run monitor\"",
    "build:operator": "arduino-cli compile -b esp32:esp32:XIAO_ESP32C3 ./operator",
    "upload:operator": "arduino-cli upload -p /dev/ttyACM0 -b esp32:esp32:XIAO_ESP32C3 ./operator",
    "dev:switchboard": "npm run build:switchboard && npm run upload:switchboard && concurrently \"npm run monitor\"",
    "build:switchboard": "arduino-cli compile -b esp32:esp32:XIAO_ESP32C3 ./switchboard",
    "upload:switchboard": "arduino-cli upload -p /dev/ttyACM0 -b esp32:esp32:XIAO_ESP32C3 ./switchboard",
    "monitor": "arduino-cli monitor -p /dev/ttyACM0 -c baudrate=115200",
    "serve": "node server/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "openai": "^6.7.0",
    "ws": "^8.18.3"
  }
}