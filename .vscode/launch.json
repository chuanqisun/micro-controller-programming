{
  // Launch configuration to run deploy.sh with CURRENT_FILE_PATH set to the active file's folder
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch via NPM",
      "request": "launch",
      "runtimeArgs": ["run-script", "dev"],
      "runtimeExecutable": "npm",
      "cwd": "${workspaceFolder}/week15",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "command": "./debug.sh",
      "name": "deploy to device",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "CURRENT_FILE_PATH": "${fileDirname}"
      }
    }
  ]
}
